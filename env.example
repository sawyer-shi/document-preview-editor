# Document Preview Editor 环境变量配置
# 复制此文件为 .env 并根据需要修改配置

# 主机配置
HOST_PORT=5000          # 主机端口（浏览器访问端口）
CONTAINER_PORT=5000     # 容器内部端口
HOST=0.0.0.0           # 监听主机地址

# 应用配置
DEBUG=False            # 调试模式（True/False）
FLASK_ENV=production   # Flask环境（development/production）

# 安全配置
SECRET_KEY=document-preview-editor-secret-key-2024

# 文件配置（可选）
MAX_CONTENT_LENGTH=52428800  # 最大文件大小（50MB）

# 示例配置组合：
#
# 开发环境：
# DEBUG=True
# FLASK_ENV=development
# HOST_PORT=5000
#
# 生产环境：
# DEBUG=False
# FLASK_ENV=production
# HOST_PORT=80
# SECRET_KEY=your-secure-secret-key
#
# 自定义端口：
# HOST_PORT=8080
# CONTAINER_PORT=5000 